<h2>
    Add New Post
</h2>
<form id="new-post-form">
    <div>
        <label for="title">Title:</label>
        <input id="title" type="text">
    </div>
    <div>
        <label for="entry">Entry:</label>
        <textarea id="entry" placeholder="Enter your entry here" cols="60" rows="5"></textarea>
    </div>
    <div>
        <button type="submit" id="add-post-btn">Add Post</button>
    </div>
</form>
<script src="/javascripts/add-post.js"></script>
<h2>
    {{username}}'s Dashboard
</h2>
<ul class="dashboard-list">
    {{#each posts as |post|}}
    <li>
        <article>
            <div>
                <h2><a href="/dashboard/edit/{{id}}">{{title}}</a></h2>
                <span>Post by {{user.username}} on {{format_date created_at}}</span>
            </div>
            <p>
                {{entry}}
            </p>
        </article>
    </li>
    {{/each}}
</ul>


<button type="button" id="add-post-btn">Add New Post</button>


<script src="/javascripts/newpost.js"></script>